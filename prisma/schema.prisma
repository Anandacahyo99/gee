generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")

}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  histories History[] // Relasi ke riwayat scan
  createdAt DateTime  @default(now())
}

model History {
  id           String   @id @default(cuid())
  locationName String
  areaTertanam Float
  areaKosong   Float
  ndviAvg      Float
  startDate    String
  endDate      String
  tileUrl      String?  // Tambahkan ini untuk menyimpan URL peta GEE
  chartData    String?  // Tambahkan ini untuk menyimpan JSON string perbandingan
  user         User?     @relation(fields: [userId], references: [id])
  userId       String?
  createdAt    DateTime @default(now())
}